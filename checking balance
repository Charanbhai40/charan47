class hdfc:
    def __init__(self):
          self.balance = 0
          print("Welcome to HDFC")
                         
    def deposit(self):
          amount=float(input("enter amount to be deposited:"))
          self.balance+=amount
          print("\n Deposited amount :",amount)
    def withdraw(self):
          amount=float(input("Enter amount to be withdrawn:"))
          if self.balance >= amount:
                self.balance-=amount
                print("\n withdrew :",amount)
          else:
                print("\n Insufficient balance")
    def  checkbal(self):
          print("\n Net Available balance:",self.balance)

#driver code
s=hdfc()
s.deposit()
s.withdraw()
s.checkbal()
